<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#ff62504e">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText" android:layout_weight="10"
                android:layout_marginLeft="10dp" android:layout_marginRight="5dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton13" android:background="@drawable/ic_action_accept"
                android:layout_weight="1" android:layout_gravity="bottom" android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton14" android:background="@drawable/ruanjianpan"
                android:layout_weight="1" android:layout_gravity="bottom" android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton15"
                    android:background="@drawable/iconfont_zitibianji"
                    android:layout_marginLeft="15dp"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv1" android:text="@string/word_font" android:textSize="20dp"
                    android:layout_gravity="center"/>
        </LinearLayout>
        <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView4" android:background="#ff4c3c3d" android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton16"
                    android:background="@drawable/iconfont_yanse" android:layout_marginLeft="5dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView"
                      android:text="@string/word_color" android:textSize="20dp" android:layout_gravity="center"/>
        </LinearLayout>
        <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView5" android:background="#ff4c3c3d" android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:layout_weight="1">
            <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:id="@+id/imageButton17" android:layout_marginLeft="5dp"
                         android:background="@drawable/iconfont_zitidaxiao"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/textView5" android:text="@string/word_size" android:textSize="20dp"
                      android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/listView"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/listView2" android:visibility="gone"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/listView3" android:visibility="gone"/>
</LinearLayout>