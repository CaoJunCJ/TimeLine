<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp" android:gravity="center" android:layout_gravity="center_vertical">
            <ImageView
                    android:id="@+id/imageViewWeiXin"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/share_btn0"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            <ImageView
                    android:id="@+id/imageViewPengYouQuan"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/share_btn1"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            <ImageView
                    android:id="@+id/imageViewQQKongjian"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/share_btn2"

                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp">
            <ImageView
                    android:id="@+id/imageViewXinLangWeiBo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/share_btn3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            <ImageView
                    android:id="@+id/imageViewMeiTuang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/share_btn4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            <ImageView
                    android:id="@+id/imageViewMeiTuXiuXiu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/share_btn5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

