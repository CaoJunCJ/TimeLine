<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#ffffffff">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/coffee"
                android:id="@+id/textView14" android:textColor="#70000000" android:layout_gravity="center_horizontal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/coffee_small_title"
                android:id="@+id/textView15" android:textColor="#70000000" android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp" android:layout_marginBottom="5dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/imageView12" android:adjustViewBounds="true" android:scaleType="fitXY"
                android:layout_weight="1" android:src="@drawable/coffee_a" android:layout_marginRight="5dp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/imageView13" android:layout_weight="1" android:src="@drawable/coffee_b"
                android:scaleType="fitXY" android:layout_marginLeft="5dp" android:adjustViewBounds="true"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginRight="15dp"
                  android:layout_marginLeft="15dp" android:layout_marginBottom="5dp">
        <ImageView android:layout_width="match_parent" android:layout_height="180dp" android:id="@+id/imageView14"
                   android:adjustViewBounds="true" android:scaleType="fitXY" android:layout_weight="1"
                   android:src="@drawable/coffee_c" android:layout_marginRight="5dp"/>
        <ImageView android:layout_width="match_parent" android:layout_height="180dp" android:id="@+id/imageView15"
                   android:layout_weight="1" android:src="@drawable/coffee_d" android:scaleType="fitXY"
                   android:layout_marginLeft="5dp" android:adjustViewBounds="true"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/author_name"
            android:id="@+id/textView16" android:layout_gravity="center_horizontal" android:layout_marginTop="5dp"
            android:textColor="#60000000"/>
</LinearLayout>